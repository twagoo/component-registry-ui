{
  "openapi": "3.0.1",
  "info": {
    "title": "Component Registry API",
    "description": "Components and profiles registry for the Component Metadata Infrastructure",
    "contact": {
      "name": "CLARIN ERIC",
      "url": "https://www.clarin.eu",
      "email": "cmdi@clarin.eu"
    },
    "version": "1.0"
  },
  "paths": {
    "/rest/registry/test": {
      "get": {
        "operationId": "getTestItem",
        "responses": {
          "default": {
            "description": "default response",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/BaseDescription"
                }
              }
            }
          }
        }
      }
    },
    "/rest/application.wadl/{path}": {
      "get": {
        "operationId": "getExternalGrammar",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "default response",
            "content": {
              "application/xml": {}
            }
          }
        }
      }
    },
    "/rest/application.wadl": {
      "get": {
        "operationId": "getWadl",
        "responses": {
          "default": {
            "description": "default response",
            "content": {
              "application/vnd.sun.wadl+xml": {},
              "application/xml": {}
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BaseDescription": {
        "type": "object",
        "properties": {
          "dbId": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "registrationDate": {
            "type": "string",
            "format": "date-time"
          },
          "creatorName": {
            "type": "string"
          },
          "dbUserId": {
            "type": "integer",
            "format": "int64"
          },
          "userId": {
            "type": "string"
          },
          "domainName": {
            "type": "string"
          },
          "href": {
            "type": "string",
            "xml": {
              "namespace": "http://www.w3.org/1999/xlink"
            }
          },
          "groupName": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "development",
              "production",
              "deprecated"
            ]
          },
          "derivedfrom": {
            "type": "string"
          },
          "successor": {
            "type": "string"
          },
          "commentsCount": {
            "type": "integer",
            "format": "int32"
          },
          "content": {
            "type": "string"
          },
          "deleted": {
            "type": "boolean"
          },
          "recommended": {
            "type": "boolean"
          },
          "public": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          },
          "showInEditor": {
            "type": "boolean"
          },
          "isPublic": {
            "type": "boolean"
          }
        },
        "xml": {
          "name": "description"
        }
      }
    }
  }
}
